#!/bin/bash -e
cleanup () {
	rm -f ~/.tmp/sshvars
}
trap cleanup 0
mkdir -p ~/.tmp
SSHVARS="SSH_CLIENT SSH_TTY SSH_AUTH_SOCK SSH_CONNECTION DISPLAY"
for x in ${SSHVARS} ; do
    (eval echo $x=\$$x) | sed  's/=/="/
                                s/$/"/
                                s/^/export /'
done 1>~/.tmp/sshvars
"$EB_ORIG_SCREEN_PATH" "$@"
